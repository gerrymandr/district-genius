doctype
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
    title District Genius
    link(rel="stylesheet", href="/lib/bootstrap.min.css")
    link(rel="stylesheet", href="/custom.css")
  body
    .container
      .row
        .col-sm-12
          h2.centered District Genius
          h4.centered Comment on borders
      .row
        .col-sm-6
          form.form.well(action="/register", method="POST")
            input(type="hidden", name="_csrf", value=csrfToken)
            .form-group
              label Username
              input.form-control.input-lg(type="text", name="username")
            .form-group
              label Password
              input.form-control.input-lg(type="password", name="password")
            .form-group
              label Which state do you live in? (name or abbreviation)
              input.form-control(type="text", name="state")
              label.checkbox
                input(type="checkbox", name="foreign")
                span Outside of United States
            .form-group
              label Do you live in a gerrymandered district?
              label.radio
                input(type="radio", name="gerrymander", value="y")
                span Yes
              label.radio
                input(type="radio", name="gerrymander", value="n")
                span No
              label.radio
                input(type="radio", name="gerrymander", value="idk")
                span Don't Know
            br
            input.btn.btn-success(type="submit", value="Get Started")

        .col-sm-6
          h4 What is this?
          p District Genius
    script(src="/force-https.js")
